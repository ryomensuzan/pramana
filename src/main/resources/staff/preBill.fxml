<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.staff.PreBillController"
            styleClass="content-area">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="printArea" spacing="15" style="-fx-background-color: white; -fx-padding: 40;">

                <!-- Hospital Header -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="PRAMANA HOSPITAL"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Billing Department"
                           style="-fx-font-size: 15px;"/>
                    <Label text="Phone: +977-XXX-XXXXX | Email: info@pramanahospital.com"
                           style="-fx-font-size: 11px;"/>
                </VBox>

                <Separator/>

                <!-- Bill Information -->
                <HBox spacing="50">
                    <VBox spacing="8">
                        <HBox spacing="10">
                            <Label text="BILL NO:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="billNoLabel"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="DATE TIME:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="billDateLabel"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="COUNTER:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="counterLabel"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="8">
                        <HBox spacing="10">
                            <Label text="PATIENT CODE:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="patientCodeLabel"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="PATIENT NAME:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="patientNameLabel"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="AGE / GENDER:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="ageGenderLabel"/>
                        </HBox>
                    </VBox>
                </HBox>

                <Separator/>

                <!-- Services Table -->
                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="SERVICES" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <TableView fx:id="itemsTable"
                               prefHeight="300"
                               minHeight="200"
                               maxHeight="500"
                               VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="snoCol"
                                         text="S.No"
                                         prefWidth="60"
                                         minWidth="50"
                                         resizable="false"/>
                            <TableColumn fx:id="serviceCol"
                                         text="Service Description"
                                         prefWidth="300"
                                         minWidth="200"/>
                            <TableColumn fx:id="priceCol"
                                         text="Price"
                                         prefWidth="100"
                                         minWidth="80"/>
                            <TableColumn fx:id="qtyCol"
                                         text="Qty"
                                         prefWidth="70"
                                         minWidth="50"
                                         resizable="false"/>
                            <TableColumn fx:id="amountCol"
                                         text="Amount"
                                         prefWidth="120"
                                         minWidth="100"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <Separator/>

                <!-- Totals -->
                <HBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox spacing="10" style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 20;">
                        <HBox spacing="50">
                            <Label text="SUBTOTAL:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <Label fx:id="subtotalLabel" style="-fx-font-size: 14px;"/>
                        </HBox>

                        <HBox spacing="50">
                            <Label text="DISCOUNT:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                            <Label fx:id="discountLabel" text="0.00" style="-fx-font-size: 14px;"/>
                        </HBox>

                        <Separator/>

                        <HBox spacing="50">
                            <Label text="GRAND TOTAL:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Label fx:id="grandTotalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Footer -->
                <VBox spacing="30" alignment="CENTER">
                    <Separator/>

                    <HBox spacing="100">
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="_____________________"/>
                            <Label text="Prepared By"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5">
                            <Label text="_____________________"/>
                            <Label text="Authorized Signature"/>
                        </VBox>
                    </HBox>

                    <Label text="Thank you for choosing Pramana Hospital"
                           style="-fx-font-style: italic;"/>

                    <Label text="*** This is a computer generated bill ***"
                           style="-fx-font-size: 10px;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Action Buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15;">
            <Button text="Print Bill"
                    onAction="#handlePrint"
                    styleClass="btn-primary"
                    prefWidth="120"/>
            <Button text="Save as PDF"
                    onAction="#handleSavePDF"
                    styleClass="btn-primary"
                    prefWidth="120"/>
            <Button text="Mark as Paid"
                    onAction="#handleMarkPaid"
                    styleClass="btn-primary"
                    prefWidth="120"/>
            <Button text="Back"
                    onAction="#handleBack"
                    prefWidth="100"/>
        </HBox>
    </bottom>

</BorderPane>
