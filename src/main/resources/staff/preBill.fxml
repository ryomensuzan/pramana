<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.staff.PreBillController"
            prefWidth="800" prefHeight="600">

    <!-- PRINTABLE AREA -->
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="billRoot"
                      spacing="8"
                      prefWidth="520"
                      styleClass="content-area">

                    <!-- HEADER -->
                    <VBox spacing="4">
                        <Label text="PRE BILL (Verification Copy)"
                               styleClass="label heading"/>
                        <Label fx:id="patientLabel"/>
                        <Label fx:id="billInfoLabel"/>
                        <Separator/>
                    </VBox>

                    <!-- ITEMS (PRINT-FRIENDLY) -->
                    <GridPane fx:id="itemsGrid"
                              hgap="10" vgap="6">
                        <!-- Headers added from controller -->
                    </GridPane>

                    <Separator/>

                    <!-- TOTAL -->
                    <HBox alignment="CENTER_LEFT">
                        <Label fx:id="grandTotalLabel"
                               styleClass="label"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- UI CONTROLS (NOT PRINTED) -->
    <bottom>
        <HBox spacing="10"
              alignment="CENTER_RIGHT"
              styleClass="content-area">
            <Button text="Print PreBill"
                    onAction="#handlePrint"
                    styleClass="btn-primary"/>
            <Button text="Back"
                    onAction="#handleBack"/>
        </HBox>
    </bottom>

</BorderPane>
