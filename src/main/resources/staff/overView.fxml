<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.staff.OverviewController"
            prefWidth="1200" prefHeight="800"
            styleClass="content-area">

    <!-- HEADER -->
    <top>
        <VBox spacing="4">
            <padding>
                <Insets bottom="24"/>
            </padding>
            <Label text="Staff Overview"
                   styleClass="label, heading"/>
            <Label text="Daily performance metrics"
                   styleClass="label, muted"/>
        </VBox>
    </top>

    <center>
        <GridPane hgap="20" vgap="20" alignment="TOP_LEFT">
            <padding>
                <Insets top="8"/>
            </padding>

            <!-- Card 1: Patients Registered Today -->
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0"
                  spacing="8"
                  styleClass="card"
                  prefWidth="280" prefHeight="120">
                <Label text="Patients Registered Today"
                       styleClass="metric-label"/>
                <Label fx:id="todayPatientsLabel"
                       text="0"
                       styleClass="metric-value"/>
            </VBox>

            <!-- Card 2: Bills Finalized Today -->
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1"
                  spacing="8"
                  styleClass="card"
                  prefWidth="280" prefHeight="120">
                <Label text="Bills Finalized Today"
                       styleClass="metric-label"/>
                <Label fx:id="todayBillsLabel"
                       text="0"
                       styleClass="metric-value"/>
            </VBox>

            <!-- Card 3: Today's Collection -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0"
                  spacing="8"
                  styleClass="card"
                  prefWidth="280" prefHeight="120">
                <Label text="Today's Collection"
                       styleClass="metric-label"/>
                <Label fx:id="todayCollectionLabel"
                       text="Rs. 0"
                       styleClass="metric-value"/>
            </VBox>

            <!-- Card 4: Active Services -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1"
                  spacing="8"
                  styleClass="card"
                  prefWidth="280" prefHeight="120">
                <Label text="Active Services"
                       styleClass="metric-label"/>
                <Label fx:id="activeServicesLabel"
                       text="0"
                       styleClass="metric-value"/>
            </VBox>

        </GridPane>
    </center>

</BorderPane>