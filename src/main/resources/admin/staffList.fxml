<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.admin.StaffListController"
      spacing="15"
      alignment="TOP_CENTER"
      prefWidth="800"
      prefHeight="500"
      style="-fx-padding:20;">

    <Label text="Staff Management"
           style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <!-- Form -->
    <GridPane hgap="10" vgap="10">
        <Label text="Counter No:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="counterField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Add Staff"
                GridPane.rowIndex="3"
                GridPane.columnIndex="1"
                onAction="#handleAddStaff"
                prefWidth="120"/>
    </GridPane>

    <Label fx:id="messageLabel" textFill="RED"/>

    <!-- Table -->
    <TableView fx:id="staffTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="counterCol" text="Counter No" prefWidth="150"/>
            <TableColumn fx:id="usernameCol" text="Username" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
