<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.admin.ManageServiceController"
            prefWidth="800"
            prefHeight="550">

    <top>
        <Label text="Manage Services"
               style="-fx-font-size:18px; -fx-padding:10; -fx-font-weight:bold;" />
    </top>

    <center>
        <VBox spacing="12" style="-fx-padding:20;">

            <!-- FORM -->
            <GridPane hgap="10" vgap="10">
                <Label text="Service Category:" />
                <ComboBox fx:id="categoryComboBox"
                          prefWidth="250"
                          GridPane.columnIndex="1"/>

                <Label text="Service Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="serviceNameField"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="2"/>
                <TextField fx:id="priceField"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Save Service"
                        onAction="#handleSaveService"/>
                <Button text="Clear"
                        onAction="#handleClear"/>
            </HBox>

            <Label fx:id="messageLabel"/>

            <Separator/>

            <!-- TABLE -->
            <TableView fx:id="serviceTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
                    <TableColumn fx:id="nameColumn" text="Service Name" prefWidth="200"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsCol" text="Actions" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
