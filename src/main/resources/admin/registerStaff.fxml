<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.admin.ManageStaffController"
      spacing="15"
      alignment="TOP_CENTER"
      prefWidth="900"
      prefHeight="550"
      styleClass="container">

    <Label text="User Management"
           style="-fx-font-size:18px; -fx-padding:10; -fx-font-weight:bold;"
           styleClass="title"/>

    <!-- Register / Update Form -->
    <GridPane hgap="12" vgap="12" styleClass="form">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>

        <Label text="Counter No:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="counterField" promptText="NULL for Admin"
                   styleClass="text-field"
                   prefWidth="200"
                   maxWidth="250"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField"
                   styleClass="text-field"
                   prefWidth="200"
                   maxWidth="250"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField"
                       styleClass="password-field"
                       prefWidth="200"
                       maxWidth="250"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <HBox spacing="10" alignment="CENTER_LEFT"
              GridPane.rowIndex="3" GridPane.columnIndex="1">
            <Button text="Save User"
                    onAction="#handleSaveUser"
                    styleClass="btn-primary"/>
            <Button text="Clear"
                    onAction="#handleClear"
                    styleClass="btn-secondary"/>
        </HBox>
    </GridPane>

    <Label fx:id="messageLabel" styleClass="message"/>

    <!-- Users Table -->
    <TableView fx:id="userTable" prefHeight="320" styleClass="table">

        <placeholder>
            <Label text="No users found" styleClass="table-placeholder"/>
        </placeholder>

        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="roleCol" text="Role" prefWidth="100"/>
            <TableColumn fx:id="counterCol" text="Counter No" prefWidth="120"/>
            <TableColumn fx:id="usernameCol" text="Username" prefWidth="180"/>
            <TableColumn fx:id="passwordCol" text="Password" prefWidth="150"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>