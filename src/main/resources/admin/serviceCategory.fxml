<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.admin.ServiceCategoryController"
            prefWidth="700"
            prefHeight="500"
            styleClass="container">

    <top>
        <Label text="Service Category Management"
               styleClass="title"
               style="-fx-padding:10;"/>
    </top>

    <center>
        <VBox spacing="10" styleClass="form" style="-fx-padding:20;">

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints halignment="LEFT" minWidth="200"/>
                </columnConstraints>

                <Label text="Category Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="categoryNameField" styleClass="text-field"
                           prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionField" styleClass="text-area"
                          prefRowCount="3" prefWidth="200"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Save Category" styleClass="btn-primary"
                        onAction="#handleSaveCategory"/>
                <Button text="Clear" styleClass="btn-secondary"
                        onAction="#handleClear"/>
            </HBox>

            <Label fx:id="messageLabel" styleClass="message"/>

            <Separator/>

            <TableView fx:id="categoryTable" prefHeight="250" styleClass="table">
                <placeholder>
                    <Label text="No categories found" styleClass="table-placeholder"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="nameColumn" text="Category Name" prefWidth="180"/>
                    <TableColumn fx:id="descColumn" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsCol" text="Actions" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>